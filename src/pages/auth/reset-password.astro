---
import Layout from "@/layouts/Layout.astro";
import { AuthForm } from "@/components/auth/AuthForm";

const handleResetPassword = () => {
  // The actual implementation will be handled by the AuthForm component
  // This is just to satisfy the TypeScript empty function error
  return Promise.resolve();
};
---

<Layout title="Reset Password - 10x Cards">
  <div class="container mx-auto min-h-[calc(100vh-4rem)] flex items-center">
    <div class="max-w-md mx-auto w-full py-8">
      <div class="flex flex-col space-y-2 text-center mb-8">
        <h1 class="text-4xl font-bold tracking-tight">Reset password</h1>
        <p class="text-lg text-muted-foreground">
          Enter your email address and we will send you a link to reset your password
        </p>
      </div>

      <AuthForm client:load type="reset" onSubmit={handleResetPassword} />

      <div class="text-sm text-center mt-6">
        Remember your password?{" "}
        <a href="/auth/login" class="underline"> Sign in </a>
      </div>
    </div>
  </div>
</Layout>
